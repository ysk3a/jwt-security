meta {
  name: refresh_token
  type: http
  seq: 4
}

post {
  url: http://localhost:8080/api/auth/refresh-token
  body: none
  auth: bearer
}

auth:bearer {
  token: {{refreshToken}}
}

body:json {
  {
    "refreshToken": "{{refreshToken}}"
  }
}

script:post-response {
  bru.setVar("accessToken", res.body.accessToken);
  bru.setVar("refreshToken", res.body.refreshToken);
}

settings {
  encodeUrl: true
}
